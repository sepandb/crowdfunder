<h1>Add Breakpoint to <%= @project.title %> </h1>

<%= params %>

<%= form_for (@breakpoint) do |f| %>

	<%= f.hidden_field :project_id, :value => @project.id %>

	<p>
	<%= f.label "amount" %>
	<%= f.number_field "amount" %>
	</p>
	<p>
	<%= f.label "reward" %>
	<%= f.text_field "reward" %>
	</p>

	<%= f.submit "Create Breakpoint" %>

<% end  %>