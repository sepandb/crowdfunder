<h1> Add a New Project</h1>

<%= form_for(@project) do |f| %>
	<p>
	<%= f.label "title" %>
	<%= f.text_field "title" %>
	</p>

	<p>
	<%= f.label "description" %>
	<%= f.text_area "description" %>
	</p>

	<p>
	<%= f.label "goal" %>
	<%= f.number_field "goal" %>
	</p>

	<p>
	<%= f.label "funding_period" %>
	<%= f.number_field "funding_period" %>
	</p>
	<p>
	<%= f.label "category" %>
	<%= f.text_field "category" %>
	</p>

	<%= f.submit "Add Project!" %>

<% end %>